= form_for @ticket do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ticket.errors.count, "error")} prohibited this ticket from being saved:"
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :status_id
    = f.number_field :status_id
  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :descricao
    = f.text_area :descricao
  .actions
    = f.submit 'Save'
