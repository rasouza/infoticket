= form_for @ticket do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ticket.errors.count, "error")} prohibited this ticket from being saved:"
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :descricao
    = f.text_area :descricao
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :status
    = f.collection_select :status_id, Status.all, :id, :nome
  .actions
    = f.submit 'Save'
='ae'
