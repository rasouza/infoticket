= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :maquina_id
    = f.number_field :maquina_id
  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :senha
    = f.text_field :senha
  .actions
    = f.submit 'Save'
